{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "types": ["node"],

    "verbatimModuleSyntax": false,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
